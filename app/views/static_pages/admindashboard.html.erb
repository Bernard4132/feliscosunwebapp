<style type="text/css">
	.holddashboardhead {
		background-color: #eaeaea;
		padding-top: 50px;
		padding-bottom: 50px;
		padding-left: 20px;
		padding-right: 20px;
		border-radius: 30px;
	}
</style>

<br>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="holddashboardhead">
				<h1 style="text-align: center;">Welcome</h1>
				<p style="text-align: center;">Welcome to the admin dashboard. Manage The Felisco-Sun Ghana Ltd. from here.</p>
			</div>
		</div>
	</div>
	<div class="row" style="margin-top: 20px;">
		<div class="col-lg-12">
			<p style="text-align: center;">
				<a href="/shippingorders/new" class="btn btn-primary">Create Shipping Order</a>
			</p>
		</div>
		<!-- <div class="col-lg-6">
			
		</div> -->
	</div>
	<div class="row" style="margin-top: 20px; margin-bottom: 40px;">
		<div class="col-lg-4">
			<h5>Shipping Orders</h5>
			<div class="row">
				<% Shippingorder.all.each do |shippingorder| %>
				<div class="col-lg-12">
					<p style="border-bottom: 1px solid #aeaeae; padding-bottom: 10px;">
						<%= shippingorder.fromcomp %><br>
						<%= shippingorder.containerno %><br>
						<% if shippingorder.user.present? %>
						<span style="font-size: 10px;">Created by: <%= shippingorder.user.email %> </span><br><br>
						<% end %>
						<a href="/shippingorders/<%= shippingorder.id %>" style="color: blue;">Shipping details</a>
					</p>

				</div>
				<% end %>
			</div>
		</div>

		<div class="col-lg-4">
			<h5>Client Request</h5>
			<div class="row">
			<% Contact.all.each do |contact| %>
					<div class="col-lg-12">
						<p>
					<%= contact.name %><br>
					<a href="/contacts/<%= contact.id %>">Read Requests</a>
					</p>
					</div>

				<% end %>
			</div>
		</div>

		<div class="col-lg-4">
			<%= search_form_for @q do |f| %>
          <div class="row no-gutters">
             <div class="col-lg-8">
              <%= f.search_field :containerno_cont, :placeholder =>"Container Number", :class => "form-control" %>
            </div>
            <div class="col-lg-4">
              <button style="margin-left: 10px;" class="btn btn-primary">Find</button>
            </div>
          </div>
          <% end %>
		</div>
	</div>
</div>